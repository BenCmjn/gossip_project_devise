	    	<% if moussaillonid == current_moussaillon.id %>
	    	<td><%= link_to "Suppr", gossip, :method=> :delete , class: "btn btn-sm btn-danger" %>
	    	</td>
    	<%end%></tr>
    <%end%>
    </table>
</div>

<% else %>
    <%= link_to "Se connecter", new_moussaillon_session_path, class: "btn btn-lg btn-primary" %>
      <%= link_to "S'inscrire", new_moussaillon_registration_path, class: "btn btn-lg btn-primary" %>
  <% end %>

